{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "types": ["jest"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "components/*": ["components/*"],
      "design-system/*": ["design-system/*"],
      "utils/*": ["utils/*"],
      "langs/*": ["langs/*"],
      "hooks/*": ["hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "setupTests.js"],
  "exclude": ["node_modules", "cypress/**/*.spec.ts", "scripts"]
}
